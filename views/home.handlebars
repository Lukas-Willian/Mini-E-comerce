


    <html>
    <head>
        <link rel="stylesheet" href="./CSS/style.css">
        <link rel="stylesheet" href="./CSS/Newbox.css">
        <link rel="shortcut icon" href="./static/IMG/1.png">
        <title>
            Mini E-comerce
        </title>
    </head>

    <body id="Body">

        <img src="./static/IMG/1.png" width="250px" height="105px"/>
        

        <div class="List">
            
            
            <form action="/"><button class="Botão">Inicio</button></form>
            <form action="/"><button class="Botão">Favoritos</button></form>
            <form action="/"><button class="Botão">Promoções</button></form>


        </div>
        <form action="/cadastro" method="GET">
            <input type="image"  src="./static/IMG/Icons/Upload.png" id="Upload" alt="Submit" width="55" height="40">
         </form>
        <img src="./static/IMG/Icons/Carrinho.png" width="40px" height="40px" id="Carz" onclick="Carrin()"/>
        <section id="img-prom">
        <img src="./static/IMG/Images/Inicio.png"  id="img-prom"/>
        </section>


            <section class="sectionOrigin" id="sectionOrigin">
                <p>Carrinho</p> <img src="./static/IMG/Icons/Carrinho.png" height="25px" width="25px" class="Carrinho">
            </section>

 

        <p id="list">Calçados</p>
            <section id="space">
                {{#each posts}}
                    <div id="Quadro">
                        <input type="image" id="IMG" alt="Submit" src="{{dataValues.images}}"
                        <h1 id="Nome">{{dataValues.titulo}}</h1>
                        <p id="Preço">R${{dataValues.preço}}</p>
                        <a id="Lixeira" href="/deletarPost/{{dataValues.id}}"><input type="image" alt="Submit" src="../static/IMG/Icons/Lixeira.png" width="30px" height="25px"/> </a>  
                    </div>

                {{/each}}
             </section>
              <hr>

    <p id="List2">Roupas</p>
        <section id="space">
            {{#each roups}}
                <div id="Quadro">
                    <a href="/pag/{{dataValues.id}}"><input type="image" id="IMG" alt="Submit" src="{{dataValues.imagesRoupas}}"/><input id="Button2" type="button" alt="Submit"/></a>     
                    <h1 id="Nome">{{dataValues.tituloRoupas}}</h1>
                    <p id="Preço">R${{dataValues.preçoRoupas}}</p>
                    <a id="Lixeira" href="/deletarRoupas/{{dataValues.id}}"><input type="image" alt="Submit" src="../static/IMG/Icons/Lixeira.png" width="30px" height="25px"/> </a> 
         
                </div>
             {{/each}}   
        </section>




            
    </body>
    <script src="../js/Script.js"></script>
</html>